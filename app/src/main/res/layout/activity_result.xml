<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/resultLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp">

    <ImageView
        android:id="@+id/trophyImageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_trophy"
        android:layout_marginBottom="24dp" />

    <TextView
        android:id="@+id/congratsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Congratulation!"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/scoreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You got the 5 out of 10"
        android:textColor="#666666"
        android:textSize="16sp"
        android:layout_marginBottom="24dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginEnd="16dp">



            <TextView
                android:id="@+id/correctTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 Correct"
                android:textColor="#2ECC71"
                android:textSize="16sp"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            >

            <TextView
                android:id="@+id/wrongTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 Wrong"
                android:textColor="#E74C3C"
                android:textSize="16sp"
                android:layout_marginStart="8dp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/exploreButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SEE LEADERBOARD"
        android:textColor="@android:color/white"
        android:backgroundTint="#1ABC9C"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/replayTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="âŸ³ Replay Quiz"
        android:textColor="#555555"
        android:textSize="16sp" />
</LinearLayout>
